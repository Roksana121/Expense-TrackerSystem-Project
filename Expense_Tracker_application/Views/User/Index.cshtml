@model IEnumerable<Expense_Tracker_application.Models.UserVM>
@{
    ViewData["Title"] = "Index";
}

<div class="row">

    <div class="col-md-10">
        <h3>User List</h3>
        <div class="d-flex justify-content-end mb-2">
            <a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="User">Add New User</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User Name</th>
                    <th>Expense Category</th>
                    <th>ExpenseDate</th>
                    <th>Amount</th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.UserId</td>
                        <td>@u.UserName</td>
                        <td>@u.CategoryName</td>
                        <td>@u.ExpenseDate</td>
                        <td>@u.Amount</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-controller="User" asp-route-id="@u.UserId">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="User" asp-route-id="@u.UserId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>







